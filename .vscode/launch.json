{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",    // Change to your actual filename
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",   // Let VS Code handle debugger
        "--no-reload"      // Avoid double loading
      ],
      "jinja": true
    }
  ]
}
